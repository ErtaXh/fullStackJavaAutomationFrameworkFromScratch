<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Login Feature Tests">

    <listeners>
        <listener class-name="selenium.utils.Listeners" />
    </listeners>

    <test name="Login Tests">
        <classes>
            <class name="selenium.tests.RegisterTests">
                <methods>
                    <include name="successfulLoginTest"/>
                    <include name="successfulLoginTest2"/>
                    <include name="unsuccessfulLoginTest" />
                </methods>
            </class>
        </classes>
    </test>
</suite>